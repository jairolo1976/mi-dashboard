{
    "compilerOptions": {
      // Versi칩n de JS de salida
      "target": "es2021",
      // M칩dulos modernos para Vite
      "module": "esnext",
      // Soporte JSX autom치tico de React 17+
      "jsx": "react-jsx",
      // Resoluci칩n al estilo Node
      "moduleResolution": "node",
      // Base para imports absolutos dentro de src
      "baseUrl": "./src",
      "paths": { "@/*": ["*"] },
      // Activar chequeos estrictos
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      // Permitir .js/.jsx en el proyecto
      "allowJs": true,
      "checkJs": false
    },
    // Procesar todos los archivos dentro de src
    "include": ["src"]
  }
  