{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "jsx": "react-jsx",
    "moduleResolution": "node",

    "baseUrl": "./src",
    "paths": { "@/*": ["*"] },

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

    /* evita que tsc intente escribir a disco */
    "noEmit": true
  },
  "include": ["src"]
}
